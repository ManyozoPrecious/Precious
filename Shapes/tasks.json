{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Multi-File C++ Program",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-o", "area_calculator",
                "main.cpp", "square.cpp", "triangle.cpp", "circle.cpp", "area.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run C++ Program",
            "type": "shell",
            "command": "./area_calculator",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
